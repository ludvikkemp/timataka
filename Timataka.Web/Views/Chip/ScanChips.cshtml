@model Timataka.Core.Models.ViewModels.ChipViewModels.ScanChipViewModel

@{
    ViewData["Title"] = "Scan Chips";
    Layout = "_AdminLayout";
}

<section class="content">
    <h4>Scan Chips</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="ScanChips">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Code" class="control-label"></label>
                    <input asp-for="Code" class="form-control" />
                    <span asp-validation-for="Code" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Scan" class="btn btn-primary" />
                </div>
                <div>
                    <a asp-controller="Admin"
                       asp-action="Chips"
                       class="btn btn-secondary-outline btn-sm">Back to List</a>
                </div>
            </form>
        </div>
    </div>

</section>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
