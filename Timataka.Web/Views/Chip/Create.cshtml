@model Timataka.Core.Models.ViewModels.ChipViewModels.CreateChipViewModel
@{
    ViewData["Title"] = "Create";
    Layout = "_AdminLayout";
}

<section class="content">
    <h4>Scan and/or Register Chips</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Code" class="control-label"></label>
                    <input asp-for="Code" class="form-control" value=@Model.Code />
                    <span asp-validation-for="Code" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Number" class="control-label"></label>
                    <input asp-for="Number" class="form-control" autofocus value=null/>
                    <span asp-validation-for="Number" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Active"></label>
                    <select name="Active" class="form-control">
                        <option value="true" id="true">True</option>
                        <option value="false" id="false">False</option>
                    </select>
                </div>
                
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
                <div>
                    <a asp-controller="Admin" 
                       asp-action="Chips"  
                       class="btn btn-secondary-outline btn-sm">Back to List</a>
                </div>
            </form>
        </div>
    </div>

</section>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
