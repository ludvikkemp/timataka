@model Timataka.Core.Models.ViewModels.CompetitionViewModels.ManagesCompetitionViewModel

@{
    ViewData["Title"] = "Delete";
    Layout = "_AdminLayout";
}

<section class="content">
    <h2>Delete</h2>

    <h3>Are you sure you want to remove this?</h3>
    <div>
        <h4>Manager</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.FirstName)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.FirstName)
            </dd>
        </dl>

        <form asp-action="DeleteManager">
            <input type="hidden" asp-for="CompetitionId" value="@Model.CompetitionId" />
            <input type="hidden" asp-for="UserId" value="@Model.UserId" />
            <input type="submit" value="Remove" class="btn btn-primary" />
            <div>
                <a asp-controller="Admin" asp-action="Personnel" asp-route-competitionId="@Model.CompetitionId" class="btn btn-secondary-outline btn-sm">Back to List</a>
            </div>
        </form>
    </div>
</section>