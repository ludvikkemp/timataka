@model Timataka.Core.Models.Entities.Heat

@{
    ViewData["Title"] = "Delete";
    Layout = "_AdminLayout";
}

<section class="content">
    <h2>Delete</h2>
    @if (@ViewBag.NumberOfContestantsInHeat != 0)
    {
        <h3>Heat has to be empty to be deleted!</h3>
        <div>
            <h4>Number of contestants in Heat: @ViewBag.NumberOfContestantsInHeat </h4>
            <hr />
            <dl>
                <dt>
                    @Html.DisplayNameFor(model => model.HeatNumber)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.HeatNumber)
                </dd>
            </dl>


            <a asp-controller="Admin"
               asp-action="Event"
               asp-route-eventId="@ViewContext.RouteData.Values["eventId"]"
               asp-route-competitionInstanceId="@ViewContext.RouteData.Values["competitionInstanceId"]"
               asp-route-competitionId="@ViewContext.RouteData.Values["competitionId"]"
               class="btn btn-secondary-outline btn-sm">Back to List</a>

        </div>
    }
    else
    {
        <h3>Are you sure you want to delete this?</h3>
        <div>
            <h4>Heat</h4>
            <hr />
            <dl>
                <dt>
                    @Html.DisplayNameFor(model => model.HeatNumber)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.HeatNumber)
                </dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" value="@Model.Id" />
                <input type="submit" value="Delete" class="btn btn-danger-outline btn-sm" />

                <a asp-controller="Admin"
                   asp-action="Event"
                   asp-route-eventId="@ViewContext.RouteData.Values["eventId"]"
                   asp-route-competitionInstanceId="@ViewContext.RouteData.Values["competitionInstanceId"]"
                   asp-route-competitionId="@ViewContext.RouteData.Values["competitionId"]"
                   class="btn btn-secondary-outline btn-sm">Back to List</a>
            </form>
        </div>
    }

</section>
