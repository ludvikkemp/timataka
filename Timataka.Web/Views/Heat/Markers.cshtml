@model Timataka.Core.Models.ViewModels.MarkerViewModels.AssignMarkerToHeatViewModel

@{
    Layout = "_AdminLayout";
}

<section class="content">
    <div class="title-block" style="margin-bottom:15px;">

        <div class="row">
            <div class="col-md-12">
                <span class="title"> Markers </span>
            </div>
        </div>
    </div>


    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <section class="section">
                    <div class="col-md-12">
                        <div class="card" style="margin-top:15px;">
                            <section class="example">
                                <div class="table-responsive">
                                    <table class="table table-striped">
                                        <thead>
                                            <tr>
                                                <th>Time</th>
                                                <th>Type</th>
                                                <th>Location</th>
                                                <th>Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in ViewBag.AssignedMarkers)
                                            {
                                                <tr>
                                                    <td>
                                                        @item.Time
                                                    </td>
                                                    <td>
                                                        @item.Type
                                                    </td>
                                                    <td>
                                                        @item.Location
                                                    </td>
                                                    <td>
                                                        <a asp-controller="Heat"
                                                           asp-action="UnassignMarker"
                                                           asp-route-markerId="@item.Id"
                                                           asp-route-heatId="@ViewBag.HeatId"
                                                           asp-route-competitionId="@ViewContext.RouteData.Values["competitionId"]"
                                                           asp-route-competitionInstanceId="@ViewContext.RouteData.Values["competitionInstanceId"]"
                                                           asp-route-eventId="@ViewContext.RouteData.Values["eventId"]"
                                                           class="btn btn-warning-outline btn-sm">Unassign</a>
                                                    </td>
                                                </tr>

                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </section>
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <form asp-action="AssignMarker"
                  asp-route-heatId="@ViewBag.HeatId"
                  asp-route-competitionId="@ViewContext.RouteData.Values["competitionId"]"
                  asp-route-competitionInstanceId="@ViewContext.RouteData.Values["competitionInstanceId"]"
                  asp-route-eventId="@ViewContext.RouteData.Values["eventId"]">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="MarkerId">Markers</label>
                    <select name="MarkerId" class="form-control">
                        @foreach (var item in ViewBag.MarkerList)
                        {
                            <option value="@item.Id" MarkerId="@item.Id">
                                @item.Type on @item.Location at @item.Time
                            </option>
                        }
                    </select>
                </div>
                <input type="hidden" asp-for="HeatId" value="@ViewBag.heatId" />
                <div class="form-group">
                    <input type="submit" value="Assign" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>


</section>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
