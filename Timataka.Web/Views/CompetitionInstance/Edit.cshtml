@using Timataka.Core.Models.Entities
@model Timataka.Core.Models.ViewModels.CompetitionViewModels.CompetitionsInstanceViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "_AdminLayout";
}

<section class="content">
    <h4>Edit Instance</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="CompetitionId" />
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Location" class="control-label"></label>
                    <input asp-for="Location" class="form-control" />
                    <span asp-validation-for="Location" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DateFrom" class="control-label"></label>
                    <input asp-for="DateFrom" class="form-control" />
                    <span asp-validation-for="DateFrom" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DateTo" class="control-label"></label>
                    <input asp-for="DateTo" class="form-control" />
                    <span asp-validation-for="DateTo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Status"></label>
                    <select name="Status" class="form-control">
                        @if (Model.Status == Status.Pending)
            {
                <option selected value="0">Pending</option>
                <option value="1">Open For Registration</option>
                <option value="2">On Going</option>
                <option value="3">Finished</option>
                <option value="4">Closed</option>
}

                        @if (Model.Status == Status.OpenForRegistration)
            {
                <option value="0">Pending</option>
                <option selected value="1">Open For Registration</option>
                <option value="2">On Going</option>
                <option value="3">Finished</option>
                <option value="4">Closed</option>
}

                        @if (Model.Status == Status.Ongoing)
            {
                <option value="0">Pending</option>
                <option value="1">Open For Registration</option>
                <option selected value="2">On Going</option>
                <option value="3">Finished</option>
                <option value="4">Closed</option>
}

                        @if (Model.Status == Status.Finished)
            {
                <option value="0">Pending</option>
                <option value="1">Open For Registration</option>
                <option value="2">On Going</option>
                <option selected value="3">Finished</option>
                <option value="4">Closed</option>
}

                        @if (Model.Status == Status.Closed)
            {
                <option value="0">Pending</option>
                <option value="1">Open For Registration</option>
                <option value="2">On Going</option>
                <option value="3">Finished</option>
                <option selected value="4">Closed</option>
}

                    </select>
                </div>
                <div class="form-group">
                    <label asp-for="CountryId"></label>
                    <select name="CountryId" class="form-control">
                        <option value="@Model.CountryId"> @Model.CountryName </option>
                        @foreach (var item in ViewBag.ListOfNations)
            {
                <option value="@item.Value" id="@item.Value">@item.Text</option>
}
                    </select>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-controller="Admin" asp-action="Competition" asp-route-competitionId="@Model.CompetitionId" class="btn btn-secondary-outline btn-sm">Back to List</a>
    </div>
</section>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
