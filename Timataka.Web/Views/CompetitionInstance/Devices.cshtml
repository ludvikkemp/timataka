@using Timataka.Core.Models.Dto.CompetitionInstanceDTO
@model Timataka.Core.Models.Dto.CompetitionInstanceDTO.DevicesDto

@{
    ViewBag.Title = "Devices";
    ViewData["Title"] = "Devices";
    Layout = "_AdminLayout";
}

<section class="content">
    <div class="title-block" style="margin-bottom:15px;">

        <div class="row">
            <div class="col-md-12">
                <span class="title">
                    <a asp-controller="Admin"
                       asp-action="Competition"
                       asp-route-competitionId="@ViewContext.RouteData.Values["competitionId"]">@Model.CompetitionName</a> /

                    <a asp-controller="Admin"
                       asp-action="CompetitionInstance"
                       asp-route-competitionId="@ViewContext.RouteData.Values["competitionId"]"
                       asp-route-competitionInstanceId="@ViewContext.RouteData.Values["competitionInstanceId"]">@Model.CompetitionInstanceName</a> /

                    Devices
                </span>
            </div>
        </div>

    </div>

    <div class="row">
        <div class="col-md-12 pt-2">
            <a asp-controller="CompetitionInstance"
               asp-action="AssignDevice"
               asp-route-competitionId="@ViewContext.RouteData.Values["competitionId"]"
               asp-route-competitionInstanceId="@ViewContext.RouteData.Values["competitionInstanceId"]"
               class="btn btn-success btn-sm rounded-s">Assign Device</a>
            
            <a asp-controller="CompetitionInstance"
               asp-action="Contestants"
               asp-route-competitionInstanceId="@ViewContext.RouteData.Values["competitionInstanceId"]"
               asp-route-competitionId="@ViewContext.RouteData.Values["competitionId"]"
               class="btn btn-primary btn-sm rounded-s">Contestants</a>
            <a asp-controller="CompetitionInstance"
               asp-action="Markers"
               asp-route-competitionId="@ViewContext.RouteData.Values["competitionId"]"
               asp-route-competitionInstanceId="@ViewContext.RouteData.Values["competitionInstanceId"]"
               class="btn btn-primary btn-sm rounded-s">Markers</a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12 mt-3">
            <div class="card">
                <section class="section">
                    <div class="col-md-12">
                        <div class="card" style="margin-top:15px;">
                            <section class="example">
                                <div class="table-responsive">
                                    <table class="table table-striped">
                                        <thead>
                                        <tr>
                                            <th>Device</th>
                                            <th>Active</th>
                                            <th>Event</th>
                                            <th>Time</th>
                                            <th>Actions</th>
                                        </tr>
                                        </thead>
                                        <tbody>
                                        @foreach (var item in Model.DeviceInEventViewModels)
                                        {
                                            <tr>
                                                <td>@item.DeviceName</td>
                                                <td>@item.Active</td>
                                                <td>@item.EventName</td>
                                                <td>@item.DateFrom.TimeOfDay - @item.DateTo.TimeOfDay</td>
                                                <td>
                                                    <a class="btn btn-warning-outline btn-sm"
                                                       asp-controller="CompetitionInstance"
                                                       asp-action="UnassignDevice"
                                                       asp-route-deviceId="@item.DevicesInEvent.DeviceId"
                                                       asp-route-eventId="@item.DevicesInEvent.EventId"
                                                       asp-route-competitionId="@ViewContext.RouteData.Values["competitionId"]"
                                                       asp-route-competitionInstanceId="@ViewContext.RouteData.Values["competitionInstanceId"]">Unassign</a>
                                                </td>
                                            </tr>
                                        }
                                        </tbody>
                                    </table>
                                </div>
                            </section>

                        </div>
                    </div>
                </section>
            </div>
        </div>
    </div>
    <div>
        <a asp-controller="Admin"
           asp-action="CompetitionInstance"
           asp-route-competitionId="@ViewContext.RouteData.Values["competitionId"]"
           asp-route-competitionInstanceId="@ViewContext.RouteData.Values["competitionInstanceId"]"
           class="btn btn-secondary-outline btn-sm">Back to Events</a>
    </div>

</section>
