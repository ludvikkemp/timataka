@using Timataka.Core.Models.Entities
@model Timataka.Core.Models.Dto.CompetitionInstanceDTO.EditContestantDto
@{
    ViewData["Title"] = "Edit";
    Layout = "_AdminLayout";
}

<section class="content">
    <div class="title-block" style="margin-bottom:15px;">

        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <section class="section">
                        <div class="col-md-12">
                            <div class="card" style="margin-top:15px;">
                                <section class="example">
                                    <div class="table-responsive">
                                        <table class="table table-striped">
                                            <thead>
                                            <tr>
                                                <th>Events</th>
                                                <th>Date</th>
                                                <th>Gender</th>
                                                <th>Actions</th>
                                            </tr>
                                            </thead>
                                            <tbody>
                                            @foreach (var item in Model.Events)
                                            {
                                                if (item.Deleted == false)
                                                {
                                                    <tr>
                                                        <td>
                                                            <a asp-controller="Admin" asp-action="Event"
                                                               asp-route-competitionId="@ViewContext.RouteData.Values["competitionId"]"
                                                               asp-route-competitionInstanceId="@item.CompetitionInstanceId"
                                                               asp-route-eventId="@item.Id">@item.Name</a>
                                                        </td>
                                                        <td>
                                                            @item.DateFrom
                                                        </td>
                                                        <td>
                                                            @item.Gender
                                                        </td>
                                                        <td>
                                                            <a asp-controller="" asp-action=""
                                                               asp-route-competitionId="@ViewContext.RouteData.Values["competitionId"]"
                                                               asp-route-competitionInstanceId="@item.CompetitionInstanceId"
                                                               asp-route-eventId="@item.Id"
                                                               class="btn btn-warning-outline btn-sm">Edit</a>
                                                        </td>
                                                    </tr>
                                                }
                                            }
                                            </tbody>
                                        </table>
                                    </div>
                                </section>

                            </div>
                        </div>
                    </section>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
