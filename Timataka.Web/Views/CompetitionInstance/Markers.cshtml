@model IEnumerable<Timataka.Core.Models.Entities.Marker>

@{
    ViewBag.Title = "Markers";
    ViewData["Title"] = "Markers";
    Layout = "_AdminLayout";
}

<<section class="content">
    <div class="title-block" style="margin-bottom:15px;">

        <div class="row">
            <div class="col-md-12">
                <span class="title"> Markers in @ViewBag.CompetitionInstance.Name</span>
                
            </div>
        </div>

    </div>

    <div class="row">
        <div class="col-md-6">
            <form asp-action="" method="get">
                <div class="input-group">
                    <input type="text" name="Search" value="" class="form-control boxed rounded-s" placeholder="Search for markers...">
                    <span class="input-group-btn">
                        <button class="btn btn-secondary rounded-s btn-lg" type="submit">
                            <i class="fa fa-search"></i>
                        </button>
                    </span>
                </div>
            </form>
        </div>


    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <section class="section">
                    <div class="col-md-12">
                        <div class="card" style="margin-top:15px;">
                            <section class="example">
                                <div class="table-responsive">
                                    <table class="table table-striped">
                                        <thead>
                                            <tr>
                                                <th>Time</th>
                                                <th>Location</th>
                                                <th>Type</th>
                                                <th>Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model)
                                            {
                                                <tr>
                                                    <td>@item.Time</td>
                                                    <td>@item.Location</td>
                                                    <td>@item.Type</td>
                                                    <td>
                                                        <a class="btn btn-warning-outline btn-sm"
                                                           asp-controller="CompetitionInstance"
                                                           asp-action="AssignMarker"
                                                           asp-route-markerId="@item.Id"
                                                           asp-route-competitionId="@ViewContext.RouteData.Values["competitionId"]"
                                                           asp-route-competitionInstanceId="@ViewBag.CompetitionInstance.Id">Assign</a>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </section>

                        </div>
                    </div>
                </section>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <a asp-controller="Admin"
               asp-action="CompetitionInstance"
               asp-route-competitionInstanceId="@ViewBag.CompetitionInstance.Id"
               class="btn btn-secondary-outline btn-sm">Back to Events</a>
        </div>
    </div>
</section>
