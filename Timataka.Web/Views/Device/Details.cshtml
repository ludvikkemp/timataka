@model Timataka.Core.Models.ViewModels.DeviceViewModels.DeviceDetailsViewModel

@{
    ViewData["Title"] = "Details";
    Layout = "_AdminLayout";
}

<section class="content">

    <div>
        <h4>@Model.Device.Name</h4>
        <hr />
        <dl>
            <dt>
                @Html.DisplayNameFor(model => model.Device.Name)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Device.Name)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Device.Active)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Device.Active)
            </dd>
        </dl>
    </div>
    <div>
        <h4>Used in events</h4>
        <hr />
        <dl>
            @foreach (var x in Model.Events)
             {
                <dd>
                    <a asp-controller="Admin" 
                       asp-action="Event" 
                       asp-route-competitionInstanceId="@x.CompetitionInstanceId"
                       asp-route-competitionId="@x.CompetitionId"
                       asp-route-eventId="@x.Event.Id">@x.Event.Name</a> - @x.Event.DateFrom - @x.Event.DateTo
                </dd>
             }

        </dl>
    </div>
    <div>
        <a asp-action="Edit" asp-route-deviceId="@Model.Device.Id" class="btn btn-warning-outline btn-sm">Edit</a>
        <a asp-controller="Admin" asp-action="Devices" class="btn btn-secondary-outline btn-sm">Back to List</a>
    </div>
</section>