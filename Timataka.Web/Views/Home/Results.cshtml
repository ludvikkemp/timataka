@model IEnumerable<Timataka.Core.Models.Entities.Competition>

@{
    ViewBag.Title = "Results";
    Layout = "_Layout";
}

<section class="content">
    
    <div class="row">
        <div class="col-md-5">
            <form asp-action="Results" method="get">
                <div class="input-group">
                    <input type="text" name="Search" value="" class="form-control boxed rounded-s" placeholder="Search for competition...">
                    <h4>
                    <span class="input-group-btn">
                        <button class="btn btn-secondary rounded-s btn-lg" type="submit">
                            <i class="fa fa-search"></i>
                        </button>
                    </span>
                    </h4>
</div>
            </form>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <section class="section">
                    <div class="col-md-12">
                        <div class="card" style="margin-top:15px;margin-bottom:15px;">
                            <section class="example">
                                <div class="table-responsive">
                                    <table class="table table-striped">
                                        <thead>
                                            <tr>
                                                <th>Name</th>
                                                <th>Sponsor</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var comp in Model)
                    {
                        if (comp.Deleted == false)
                        {
                            <tr>
                                <td>
                                    <a asp-controller="Home" asp-action="Competition" asp-route-competitionId="@comp.Id">@comp.Name</a>
                                </td>
                                <td>
                                    @comp.Sponsor
                                </td>
                            </tr>
}
}
                                        </tbody>
                                    </table>
                                </div>
                            </section>

                        </div>
                    </div>
                </section>
            </div>
        </div>
    </div>


</section>
