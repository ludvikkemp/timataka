@model Timataka.Core.Models.Dto.AdminDTO.CompetitionDto

@{
    Layout = "_Layout";
}
<section class="content">
    <div class="title-block" style="margin-bottom:15px;">

        <div class="row">
            <div class="col-md-12">
                <span class="title"> @Model.Competiton.Name </span>
            </div>
        </div>
    </div>

    <div class="row">

        <div class="col-md-5">
            <form asp-action="Competition" method="get">
                <div class="input-group">
                    <input type="hidden" value="@Model.Competiton.Id" name="competitionId"/>
                    <input type="text" name="Search" value="" class="form-control boxed rounded-s" placeholder="Search for competition instance...">
                    <span class="input-group-btn">
                        <button class="btn btn-secondary rounded-s btn-lg" type="submit">
                            <i class="fa fa-search"></i>
                        </button>
                    </span>
                </div>
            </form>
        </div>
        
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <section class="section">
                    <div class="col-md-12">
                        <div class="card" style="margin-top:15px;">
                            <section class="example">
                                <div class="table-responsive">
                                    <table class="table table-striped">
                                        <thead>
                                            <tr>
                                                <th>Instance</th>
                                                <th>Date</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model.Instances)
                                            {
                                                if (item.Deleted == false)
                                                {
                                                    <tr>
                                                        <td>
                                                            <a asp-controller="Home" asp-action="Instance" asp-route-instanceId="@item.Id" asp-route-competitionId="@item.CompetitionId">@item.Name</a>
                                                        </td>
                                                        <td>
                                                            @item.DateFrom
                                                        </td>
                                                    </tr>
                                                }
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </section>

                        </div>
                    </div>
                </section>
            </div>
        </div>
    </div>


</section>

