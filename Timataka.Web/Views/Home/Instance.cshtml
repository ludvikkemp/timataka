@model Timataka.Core.Models.Dto.AdminDTO.CompetitionInstanceDTO

@{
    Layout = "_Layout";
}
<section class="content">
    <div class="title-block" style="margin-bottom:15px;">

        <div class="row">
            <div class="col-md-12">
                <span class="title">
                    <a asp-controller="Home"
                       asp-action="Competition"
                       asp-route-competitionId="@Model.Competition.Id">@Model.Competition.Name</a> /

                    @Model.CompetitionInstance.Name
                </span>

            </div>
        </div>

    </div>

    <div class="row">

        <div class="col-md-5">
            <form asp-action="Instance" method="get">
                <div class="input-group">
                    <input type="hidden" value="@Model.Competition.Id" name="competitionId" />
                    <input type="hidden" value="@Model.CompetitionInstance.Id" name="instanceId" />
                    <input type="text" name="Search" value="" class="form-control boxed rounded-s" placeholder="Search for event...">
                    <span class="input-group-btn">
                        <button class="btn btn-secondary rounded-s btn-lg" type="submit">
                            <i class="fa fa-search"></i>
                        </button>
                    </span>
                </div>
            </form>
        </div>

    </div>
    <!--
    <div class="row">

        <div class="col-md-6">
            <a asp-controller="CompetitionInstance"
               asp-action="Contestants"
               asp-route-competitionInstanceId="Model.CompetitionInstance.Id"
               asp-route-competitionId="Model.CompetitionInstance.CompetitionId"
               class="btn btn-primary btn-sm rounded-s">Contestants</a>
        </div>

    </div>
    -->
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <section class="section">
                    <div class="col-md-12">
                        <div class="card" style="margin-top:15px;">
                            <section class="example">
                                <div class="table-responsive">
                                    <table class="table table-striped">
                                        <thead>
                                            <tr>
                                                <th>Events</th>
                                                <th>Date</th>
                                                <th>Gender</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model.Events)
                                            {
                                                if (item.Deleted == false)
                                                {
                                                    <tr>
                                                        <td>
                                                            <a asp-controller="Home" asp-action="Event"
                                                               asp-route-competitionId="@ViewContext.RouteData.Values["competitionId"]"
                                                               asp-route-instanceId="@item.CompetitionInstanceId"
                                                               asp-route-eventId="@item.Id">@item.Name</a>
                                                        </td>
                                                        <td>
                                                            @item.DateFrom
                                                        </td>
                                                        <td>
                                                            @item.Gender
                                                        </td>
                                                    </tr>
                                                }
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </section>

                        </div>
                    </div>
                </section>
            </div>
        </div>
    </div>


</section>

