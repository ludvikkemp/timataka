    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <section class="section">
                    <div class="col-md-12">
                        <div class="card" style="margin-top:15px;">
                            <section class="example">
                                <div class="table-responsive">
                                    <table class="table table-striped">
                                        <thead>
                                            <tr>
                                                <th>Rank</th>
                                                <th>BIB</th>
                                                <th>Name</th>
                                                <th>Year of birth</th>
                                                <th>Club</th>
                                                <th>Country</th>
                                                <th>Guntime (Chiptime)</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @{int i = 1;}
                                            @foreach (var item in Model)
                                            {
                                                <tr>
                                                    <td>
                                                        @i
                                                    </td>
                                                    <td>
                                                        @item.Bib
                                                    </td>
                                                    <td>
                                                        @item.Name
                                                    </td>
                                                    <td>
                                                        @item.DateOfBirth.Year
                                                    </td>
                                                    <td>
                                                        @item.Club
                                                    </td>
                                                    <td>
                                                        @item.Country
                                                    </td>
                                                    <td>
                                                        @item.GunTime (@item.ChipTime)
                                                    </td>
                                                </tr>
                                                i++;
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </section>

                        </div>
                    </div>
                </section>
            </div>
        </div>
    </div>


</section>

