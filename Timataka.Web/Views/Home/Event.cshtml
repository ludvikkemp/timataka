@model IEnumerable<Timataka.Core.Models.ViewModels.HomeViewModels.ResultViewModel>

@{
    Layout = "_Layout";
}
<section class="content">
    <div class="title-block" style="margin-bottom:15px;">

        <div class="row">
            <div class="col-md-12">
                <span class="title">
                    <a asp-controller="Home"
                       asp-action="Competition"
                       asp-route-competitionId="@ViewContext.RouteData.Values["competitionId"]">@ViewBag.CompetitionName</a> /

                    <a asp-controller="Home"
                       asp-action="instance"
                       asp-route-competitionId="@ViewContext.RouteData.Values["competitionId"]"
                       asp-route-instanceId="@ViewContext.RouteData.Values["instanceId"]">@ViewBag.CompetitionInstanceName</a> /

                    @ViewBag.EventName
                </span>


            </div>
        </div>
    </div>

