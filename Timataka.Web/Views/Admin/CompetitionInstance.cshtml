@model Timataka.Core.Models.Dto.AdminDTO.CompetitionInstanceDTO

@{
    Layout = "_AdminLayout";
}
<section class="content">
    <div class="title-block" style="margin-bottom:15px;">

        <div class="row">
            <div class="col-md-12">
                <span class="title">
                    <a asp-controller="Admin"
                       asp-action="Competition"
                       asp-route-competitionId="@Model.Competition.Id">@Model.Competition.Name</a> /

                    @Model.CompetitionInstance.Name
                </span>

            </div>
        </div>

    </div>

    <div class="row">

        <div class="col-md-6">
            <a asp-controller="Event"
               asp-action="Create"
               asp-route-competitionInstanceId="@Model.CompetitionInstance.Id"
               asp-route-competitionId="@Model.CompetitionInstance.CompetitionId"
               class="btn btn-primary btn-sm rounded-s">Add Event</a>

            <a asp-controller="CompetitionInstance"
               asp-action="Devices"
               asp-route-competitionInstanceId="@Model.CompetitionInstance.Id"
               asp-route-competitionId="@Model.CompetitionInstance.CompetitionId"
               class="btn btn-primary btn-sm rounded-s">Devices</a>

            <a asp-controller="CompetitionInstance"
               asp-action="Markers"
               asp-route-competitionInstanceId="@Model.CompetitionInstance.Id"
               asp-route-competitionId="@Model.CompetitionInstance.CompetitionId"
               class="btn btn-primary btn-sm rounded-s">Markers</a>
            <a asp-controller="CompetitionInstance"
               asp-action="Contestants"
               asp-route-competitionInstanceId="@Model.CompetitionInstance.Id"
               asp-route-competitionId="@Model.CompetitionInstance.CompetitionId"
               class="btn btn-primary btn-sm rounded-s">Contestants</a>
        </div>

    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <section class="section">
                    <div class="col-md-12">
                        <div class="card" style="margin-top:15px;">
                            <section class="example">
                                <div class="table-responsive">
                                    <table class="table table-striped">
                                        <thead>
                                            <tr>
                                                <th>Events</th>
                                                <th>Date</th>
                                                <th>Gender</th>
                                                <th>Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model.Events)
                                            {
                                                if (item.Deleted == false)
                                                {
                                            <tr>
                                                <td>
                                                    <a asp-controller="Admin" asp-action="Event"
                                                       asp-route-competitionId="@ViewContext.RouteData.Values["competitionId"]"
                                                       asp-route-competitionInstanceId="@item.CompetitionInstanceId"
                                                       asp-route-eventId="@item.Id">@item.Name</a>
                                                </td>
                                                <td>
                                                    @item.DateFrom
                                                </td>
                                                <td>
                                                    @item.Gender
                                                </td>
                                                <td>
                                                    <a asp-controller="Event" asp-action="Edit"
                                                       asp-route-competitionId="@ViewContext.RouteData.Values["competitionId"]"
                                                       asp-route-competitionInstanceId="@item.CompetitionInstanceId"
                                                       asp-route-eventId="@item.Id"
                                                       class="btn btn-warning-outline btn-sm">Edit</a>

                                                    <a asp-controller="Event" asp-action="Details"
                                                       asp-route-competitionId="@ViewContext.RouteData.Values["competitionId"]"
                                                       asp-route-competitionInstanceId="@item.CompetitionInstanceId"
                                                       asp-route-eventId="@item.Id"
                                                       class="btn btn-success-outline btn-sm">Details</a>

                                                    <a asp-controller="Event" asp-action="Delete"
                                                       asp-route-competitionId="@ViewContext.RouteData.Values["competitionId"]"
                                                       asp-route-competitionInstanceId="@item.CompetitionInstanceId"
                                                       asp-route-eventId="@item.Id"
                                                       class="btn btn-danger-outline btn-sm">Delete</a>
                                                </td>
                                            </tr>
                                                }
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </section>

                        </div>
                    </div>
                </section>
            </div>
        </div>
    </div>


</section>

