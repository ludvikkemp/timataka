@model IEnumerable<Timataka.Core.Models.Entities.Device>

@{
    ViewData["Title"] = "Devices";
    Layout = "_AdminLayout";
}

<section class="content">
    <div class="title-block">

        <div class="row">
            <div class="col-md-12">
                <span class="title"> Devices </span>
                <a class="btn btn-primary btn-sm rounded-s" asp-controller="Device" asp-action="Create">Create New</a>
            </div>
        </div>

    </div>

    <div class="row">
        <div class="col-md-6">
            <form asp-action="" method="get" class="form-inline">
                <div class="input-group">
                    <input type="text" name="Search" value="" class="form-control boxed rounded-s" placeholder="Search for...">
                    <span class="input-group-btn">
                        <button class="btn btn-secondary rounded-s btn-lg" type="submit">
                            <i class="fa fa-search"></i>
                        </button>
                    </span>
                </div>
            </form>
        </div>


    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <section class="section">
                    <div class="col-md-12">
                        <div class="card" style="margin-top:15px;">
                            <section class="example">
                                <div class="table-responsive">
                                    <table class="table table-striped">
                                        <thead>
                                            <tr>
                                                <th>Name</th>
                                                <th>Active</th>
                                                <th>Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model)
                                            {
                                                <tr>
                                                    <td>@item.Name</td>
                                                    <td>@item.Active</td>
                                                    <td>
                                                        <a class="btn btn-warning-outline btn-sm" asp-controller="Device" asp-action="Edit" asp-route-deviceId="@item.Id">Edit</a>
                                                        <a class="btn btn-success-outline btn-sm" asp-controller="Device" asp-action="Details" asp-route-deviceId="@item.Id">Details</a>
                                                        <a class="btn btn-danger-outline btn-sm" asp-controller="Device" asp-action="Delete" asp-route-deviceId="@item.Id">Delete</a>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </section>

                        </div>
                    </div>
                </section>
            </div>
        </div>
    </div>
</section>