@model System.Collections.Generic.IEnumerable<Timataka.Core.Models.ViewModels.ChipViewModels.ChipViewModel>

@{
    ViewBag.Title = "Chips";
    Layout = "_AdminLayout";
}

<section class="content">
    <div class="title-block" style="margin-bottom:15px;">

        <div class="row">
            <div class="col-md-12">
                <span class="title"> Chips </span>
            </div>
        </div>

    </div>

    <div class="row">
        <div class="col-md-5">
            <form asp-action="Chips" method="get">
                <div class="input-group">
                    <input type="text" 
                           name="Search" 
                           value="" 
                           class="form-control boxed rounded-s" 
                           placeholder="Search for chip by Code, Number or Last Assigned To...">

                    <span class="input-group-btn">
                        <button class="btn btn-secondary rounded-s btn-lg" type="submit">
                            <i class="fa fa-search"></i>
                        </button>
                    </span>
                </div>
            </form>
        </div>
        <div class="col-md-7">
            
            <a class="btn btn-primary btn-sm rounded-s"
               asp-controller="Chip"
               asp-action="ScanChips">Scan and/or Register Chips</a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <section class="section">
                    <div class="col-md-12">
                        <div class="card" style="margin-top:15px;">
                            <section class="example">
                                <div class="table-responsive">
                                    <table class="table table-striped">
                                        <thead>
                                            <tr>
                                                <th>Code</th>
                                                <th>Number</th>
                                                <th>Active</th>
                                                <th>Last Assigned To</th>
                                                <th>Last Competition</th>
                                                <th>Last Seen</th>
                                                <th>Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model)
                                            {
                                                <tr>
                                                    <td>@item.Code</td>
                                                    <td>@item.Number</td>
                                                    <td>@item.Active</td>
                                                    <td>@item.LastUserName (@item.LastUserSsn)</td>
                                                    <td>@item.LastCompetitionInstanceName</td>
                                                    <td>@item.LastSeen</td>
                                                    <td>
                                                        <a class="btn btn-warning-outline btn-sm" 
                                                           asp-controller="Chip" 
                                                           asp-action="Edit" 
                                                           asp-route-chipCode="@item.Code">Edit</a>
                                                        
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </section>

                        </div>
                    </div>
                </section>
            </div>
        </div>
    </div>
</section>

