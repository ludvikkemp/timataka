@model IEnumerable<Timataka.Core.Models.ViewModels.AdminViewModels.SportsViewModel>

@{
    ViewData["Title"] = "Sports";
    Layout = "_AdminLayout";
}
<section class="content">
    <div class="title-block" style="margin-bottom:15px;">

        <div class="row">
            <div class="col-md-12">
                <span class="title"> Sports </span>
                <a class="btn btn-primary btn-sm rounded-s" asp-controller="Sport" asp-action="Create">Create New</a>
            </div>
        </div>

    </div>
    
    <div class="row">
        <div class="col-md-5">
            <form asp-action="Sports" method="get">
                <div class="input-group">
                    <input type="text" name="Search" value="" class="form-control boxed rounded-s" placeholder="Search for sport...">
                    <span class="input-group-btn">
                        <button class="btn btn-secondary rounded-s btn-lg" type="submit">
                            <i class="fa fa-search"></i>
                        </button>
                    </span>
                </div>
            </form>
        </div>

        
    </div>
    
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <section class="section">
                <div class="col-md-12">
                    <div class="card" style="margin-top:15px;">
                        <section class="example">
                            <div class="table-responsive">
                                <table class="table table-striped">
                                    <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>Actions</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td><a asp-controller="Admin" asp-action="Sport" asp-route-id="@item.Id">@item.Name</a></td>
                                            <td>
                                                <a class="btn btn-warning-outline btn-sm" asp-controller="Sport" asp-action="Edit" asp-route-sportId="@item.Id">Edit</a>
                                                <a class="btn btn-success-outline btn-sm" asp-controller="Sport" asp-action="Details" asp-route-sportId="@item.Id">Details</a>
                                                <!--<a class="btn btn-danger-outline btn-sm" asp-controller="Sport" asp-action="Delete" asp-route-sportId="item.Id">Delete</a>-->
                                            </td>
                                        </tr>
                                    }
                                    </tbody>
                                </table>
                            </div>
                        </section>

                    </div>
                </div>
                </section>
            </div>
        </div>
    </div>
</section>
