@model IEnumerable<Timataka.Core.Models.ViewModels.AdminViewModels.SportsViewModel>

@{
    ViewData["Title"] = "Sports";
    Layout = "_AdminLayout";
}
<section class="content">
    <div class="title-block" style="margin-bottom:15px;">

        <div class="row">
            <div class="col-md-12">
                <span class="title"> Sports </span>
            </div>
        </div>

    </div>
    
    <div class="row">
        <div class="col-md-7 pt-2">
            <a class="btn btn-success btn-sm rounded-s" asp-controller="Sport" asp-action="Create">Create New</a>
        </div>
        <div class="col-md-5">
            <form asp-action="Sports" method="get">
                <div class="input-group">
                    <input type="text" name="Search" value="" class="form-control boxed rounded-s" placeholder="Search for sport...">
                    <span class="input-group-btn">
                        <button class="btn btn-secondary rounded-s btn-lg" type="submit">
                            <i class="fa fa-search"></i>
                        </button>
                    </span>
                </div>
            </form>
        </div>

        
    </div>
    
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <section class="section">
                    <div class="col-md-12">
                        <div class="card" style="margin-top:15px;">
                            <section class="example">
                                <div class="table-responsive">
                                    <table class="table table-striped">
                                        <thead>
                                        <tr>
                                            <th>Name</th>
                                            <th>Actions</th>
                                            <th>Actions</th>
                                        </tr>
                                        </thead>
                                        <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td><a asp-controller="Admin" asp-action="Sport" asp-route-id="@item.Id">@item.Name</a></td>
                                                <td>
                                                    <a class="btn btn-warning-outline btn-sm" asp-controller="Sport" asp-action="Edit" asp-route-sportId="@item.Id">Edit</a>
                                                    <a class="btn btn-success-outline btn-sm" asp-controller="Sport" asp-action="Details" asp-route-sportId="@item.Id">Details</a>                                               
                                                </td>
                                                <td>
                                                    <div class="header-block header-block-nav">
                                                        <ul>

                                                            <li class="profile dropdown">
                                                                <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
                                                                    <div class="img" style="background-image: url('https://avatars3.githubusercontent.com/u/3959008?v=3&s=40')"> </div>
                                                                    <span class="name">
                                                                        Hæ
                                                                    </span>
                                                                </a>
                                                                <div class="dropdown-menu profile-dropdown-menu" aria-labelledby="dropdownMenu1">
                                                                    <a class="dropdown-item" asp-area="" asp-controller="Manage" asp-action="Profile">
                                                                        <i class="fa fa-user icon"></i> Profile
                                                                    </a>

                                                                    <a class="dropdown-item" asp-area="" asp-controller="Manage" asp-action="ChangePassword">
                                                                        <i class="fa fa-gear icon"></i> Change Password
                                                                    </a>

                                                                    <div class="dropdown-divider"></div>
      
                                                                    <button type="submit" class="dropdown-item">
                     
                                                                        <i class="fa fa-power-off icon"></i>
                                                                        Log out
                          
                                                                    </button>
                                                                </div>
                                                            </li>
                                                        </ul>
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                        </tbody>
                                    </table>
                                </div>
                            </section>

                        </div>
                    </div>
                    <div class="header-block header-block-nav">
                        <ul>

                            <li class="profile dropdown">
                                <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
                                    <div class="img" style="background-image: url('https://avatars3.githubusercontent.com/u/3959008?v=3&s=40')"> </div>
                                    <span class="name">
                                        Lúlli
                                    </span>
                                </a>
                                <div class="dropdown-menu profile-dropdown-menu" aria-labelledby="dropdownMenu1">
                                    <a class="dropdown-item" asp-area="" asp-controller="Manage" asp-action="Profile">
                                        <i class="fa fa-user icon"></i> Profile
                                    </a>

                                    <a class="dropdown-item" asp-area="" asp-controller="Manage" asp-action="ChangePassword">
                                        <i class="fa fa-gear icon"></i> Change Password
                                    </a>

                                    <div class="dropdown-divider"></div>
      
                                    <button type="submit" class="dropdown-item">
                     
                                        <i class="fa fa-power-off icon"></i>
                                        Log out
                          
                                    </button>
                                </div>
                            </li>
                        </ul>
                    </div>
                </section>
            </div>
        </div>
    </div>
</section>
