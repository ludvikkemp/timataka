@model Timataka.Core.Models.Dto.AdminDTO.SportDto

@{
    ViewData["Title"] = "Disciplines";
    Layout = "_AdminLayout";
}
<section class="content">
    <div class="title-block" style="margin-bottom:15px;">

        <div class="row">
            <div class="col-md-12">
                <span class="title"> @Model.Sport.Name </span>
                <a class="btn btn-primary btn-sm rounded-s" asp-controller="Discipline" asp-action="Create" asp-route-sportId="@Model.Sport.Id">Create Discipline</a>
            </div>
        </div>

    </div>

    <div class="row">
        <div class="col-md-6">
            <form asp-action="Sport" method="get">
                <div class="input-group">
                    <input type="text" name="Search" value="" class="form-control boxed rounded-s" placeholder="Search for sport discipline...">
                    <span class="input-group-btn">
                        <button class="btn btn-secondary rounded-s btn-lg" type="submit">
                            <i class="fa fa-search"></i>
                        </button>
                    </span>
                </div>
            </form>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <section class="section">
                    <div class="col-md-12">
                        <div class="card" style="margin-top:15px;">
                            <section class="example">
                                <div class="table-responsive">
                                    <table class="table table-striped">
                                        <thead>
                                            <tr>
                                                <th>Discipline</th>
                                                <th>Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model.Disciplines)
                                            {
                                                <tr>
                                                    <td>@item.Name</td>
                                                    <td>
                                                        <a class="btn btn-warning-outline btn-sm" asp-controller="Discipline" asp-action="Edit" asp-route-disciplineId="@item.Id" asp-route-sportId="@item.SportId">Edit</a>
                                                        <a class="btn btn-success-outline btn-sm" asp-controller="Discipline" asp-action="Details" asp-route-disciplineId="@item.Id" asp-route-sportId="@item.SportId">Details</a>
                                                        <!--<a class="btn btn-danger-outline btn-sm" asp-controller="Discipline" asp-action="Delete" asp-route-disciplineId="item.Id" asp-route-sportId="item.SportId">Delete</a>-->
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </section>

                        </div>
                    </div>
                </section>
            </div>
        </div>
    </div>
</section>
